<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/shrikhand</item>
        <item name="android:fontFamily">@font/shrikhand</item>
    </style>

    <style name="TextAppearance.App.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/shrikhand</item>
        <item name="android:fontFamily">@font/shrikhand</item>
    </style>

    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>

    <style name="MyCardView2" parent="@style/Widget.Material3.CardView.Filled">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Round" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">28dp</item>
        <item name="cornerSizeTopLeft">28dp</item>
        <item name="cornerSizeBottomRight">28dp</item>
        <item name="cornerSizeBottomLeft">28dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">28dp</item>
        <item name="cornerSizeBottomLeft">28dp</item>
    </style>

    <style name="MyChip" parent="@style/Widget.Material3.Chip.Assist">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialChip.MensaApp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialChip.MensaApp" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">2dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

    <style name="SettingsMaterialAlertDialog" parent="@style/ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="materialAlertDialogTitleIconStyle">@style/Icon_tint</item>
      <!--  <item name="materialAlertDialogBodyTextStyle">@style/Body_alignment</item>-->
    </style>

    <style name="Icon_tint" parent="@style/MaterialAlertDialog.Material3.Title.Icon.CenterStacked">
        <item name="android:tint">?attr/colorOnBackground</item>
    </style>

    <!--<style name="Body_alignment" parent="@style/MaterialAlertDialog.Material3.Body.Text.CenterStacked">

    </style>-->
</resources>